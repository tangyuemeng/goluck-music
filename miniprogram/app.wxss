/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

.goluck-block-white{
  background: #F5F5F5;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 20px;
}

.goluck-block-white-untap{
  background: #F5F5F5;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 20px;
}

.goluck-block-white:active{
  background-color: #eeeeee;
  box-shadow: 0px 14px 14px rgba(0, 0, 0, 0.25);
  transform: translateY(1vw);
}

.goluck-block-black{
  background: #0C0C0C;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 20px;
}

.goluck-block-black:active{
  background-color: #2b2b2b;
  box-shadow: 0px 14px 14px rgba(0, 0, 0, 0.25);
  transform: translateY(1vw);
}

.font-black{
  color: #0C0C0C;
}

.font-white{
  color: #F5F5F5;
}

.font-title{
  font-family: 'Prompt';
  font-style: normal;
  font-weight: 900;
  font-size: 40px;
  line-height: 60px;
  text-align: center;
}

.font-subtitle{
  font-family: 'Prompt';
  font-style: normal;
  font-weight: 500;
  font-size: 28px;
  line-height: 42px;
  text-align: center;
}

.font-content{
  font-family: 'Prompt';
  font-style: normal;
  font-weight: 500;
  font-size: 20px;
  line-height: 30px;
  text-align: center;
}



.btn-white{
  background: #F5F5F5;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 20px;
}

.bar-circle{
  position: absolute;
  width: 3.6vw;
  height: 3.6vw;
  top: 1.5vh;
  left: 1vh;
  border-radius: 50%;
  background: #000000;
  border: 5px solid #A67F55;
}


page {
  background-color: #A67F55;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}